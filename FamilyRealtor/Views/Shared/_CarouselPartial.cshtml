@using FamilyRealtor.Models.DomainModels;
@model Rental

@if (Model.Photos?.Count > 0)
{
	<div class="carousel-inner rounded">
		<div class="carousel-item active">
			<img class="d-block w-100 h-100" src="~/Images/Rent/@(Model.Id)/@(Model.Photos[0].Path)" alt="...">
		</div>

		@for (int i = 1; i < Model.Photos.Count; i++)
		{
			<div class="carousel-item">
				<img class="d-block w-100 h-100" src="~/Images/Rent/@(Model.Id)/@(Model.Photos[i].Path)" alt="...">
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselComponent@(Model.Id)" data-bs-slide="prev">
		<span class="carousel-control-prev-icon"></span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselComponent@(Model.Id)" data-bs-slide="next">
		<span class="carousel-control-next-icon"></span>
	</button>
}